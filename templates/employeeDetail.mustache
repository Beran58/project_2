        <tr><td>Job</td><td style="text-align: center">{{job}}</td></tr>
        <tr><td>Wage</td><td style="text-align: center">{{wage}}</td></tr>
        <tr><td>Room</td><td style="text-align: center">{{roomName}}</td></tr>
        <tr><td colspan="2" style="text-align: center;font-weight: bold">Keys</td></tr>
